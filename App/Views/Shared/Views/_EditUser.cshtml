@model EditUserViewModel

<div class="flex flex-col">
    <text class="text-center text-white text-5xl my-10">Edit</text>

    <form method="post" class="m-auto flex flex-col w-80">

        <div class="col-auto rounded-full bg-gray-500 w-24 h-24 m-2 my-auto mt-3 mx-auto flex">
            <img src="@Model?.ImageUrl" class="rounded-full m-auto">
        </div>

        <input asp-for=Image type="file" placeholder="Image..." class="h-12 ps-2 pt-2 bg-neutral-800 rounded-xl focus:outline-none flex-shrink flex-grow mt-12 mb-1 min-w-0 text-white">
        <input asp-for=DisplayName type="text" placeholder="Display name..." class="h-12 bg-neutral-800 rounded-xl focus:outline-none flex-shrink flex-grow ps-3 min-w-0 text-white mb-6">

        <input asp-for=Password type="password" placeholder="Password..." class="h-12 bg-neutral-800 rounded-xl focus:outline-none flex-shrink flex-grow ps-3 my-2 min-w-0 text-white">

        @if (System.Diagnostics.Debugger.IsAttached)
        {
            <!--Password for convinience-->
            <p class="h-0">123456Aa!</p>
        }

        <div asp-validation-summary="All" class="text-red-600 mt-5 mb-2 text-center whitespace-pre"></div>
        <button type="submit" class="mb-1 bg-neutral-800 hover:bg-neutral-600 rounded-xl h-16 flex transition-colors text-white">
            <text class="m-auto text-lg">Save</text>
        </button>
    </form>
</div>